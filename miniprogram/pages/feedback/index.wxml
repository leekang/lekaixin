<!--index.wxml-->
  

<view class="bottom_tips">
  <van-field
    value="{{ message }}"
    label="用餐反馈："
    size="large"
    class="textArea"
    type="textarea"
    placeholder="请输入反馈"
    extra-event-params="true"
    bind:change="onInputChange"
    autosize
    border="{{ false }}"
  />
  <van-toast id="van-toast" />
  <view class="btnWrap">
    <view class="button" bind:tap="submit"
    >确定</view>
  </view>

</view>